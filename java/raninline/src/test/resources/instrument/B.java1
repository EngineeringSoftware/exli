public class B {
    public void m(int b, String s){
        if (b > 1){
            b = Integer.parseInt(s.split("\\.")[0]);
        } else {
            b = b >> 1 * 2;
        }
    }

    public static void main(String[] args) {
        B b = new B();
        b.m(1, "1.5");
        b.m(-1, "1.1");
        b.m(2, "2.1");
    }
}
